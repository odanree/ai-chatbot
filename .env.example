# ============================================================
# AI Chatbot - Environment Configuration
# ============================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ============================================================

# ============================================================
# OpenAI Configuration
# ============================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4
# Available models: gpt-4, gpt-3.5-turbo, gpt-4-turbo-preview
# gpt-4: Most capable, most expensive
# gpt-3.5-turbo: Good balance, cheaper
# gpt-4-turbo-preview: Latest features

# ============================================================
# Shopify Configuration
# ============================================================
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
# Format: subdomain.myshopify.com
# Example: odanree.myshopify.com

SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-token-here
# Get from: Shopify Admin > Settings > Apps & Integrations > 
#           Develop Apps > [Your App] > Configuration > API Credentials

SHOPIFY_ADMIN_API_TOKEN=your-admin-token-here
# Get from: Shopify Admin > Settings > Apps & Integrations >
#           Develop Apps > [Your App] > Configuration > Admin API

SHOPIFY_LOCATION_ID=your-location-id-here
# Get from: Shopify Admin > Settings > Locations
# Used for inventory management (optional)

# ============================================================
# Server Configuration
# ============================================================
PORT=3000
# Server port for local development
# Production: Usually 3000 or auto-detected by platform

NODE_ENV=development
# Options: development, production, test
# development: More logging, hot-reload
# production: Optimized, minimal logging
# test: For running tests

LOG_LEVEL=debug
# Options: error, warn, info, debug, trace
# debug: Most verbose, useful for development
# info: Production-friendly

# ============================================================
# Security & Performance
# ============================================================
# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# Time window in milliseconds (default: 15 minutes = 900000)

RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window (default: 100)

# Request Timeout
REQUEST_TIMEOUT_MS=30000
# Timeout in milliseconds (default: 30 seconds)

# ============================================================
# Database (Optional - for future use)
# ============================================================
DATABASE_URL=sqlite://./data/chatbot.db
# For SQLite local development
# For production, use PostgreSQL or MongoDB

# ============================================================
# Logging (Optional)
# ============================================================
LOG_FILE_PATH=./logs/app.log
# Path to log file
# Leave empty to disable file logging

# ============================================================
# Monitoring (Optional)
# ============================================================
SENTRY_DSN=
# Sentry error tracking (optional)
# Leave empty to disable

# ============================================================
# Development Only
# ============================================================
# These should NEVER be used in production

DEBUG=false
# Enable debug mode
# false: Production
# true: Development (verbose logging)

MOCK_OPENAI=false
# Use mock OpenAI responses (for testing)
# true: Use mocks, don't call actual API
# false: Use real API

MOCK_SHOPIFY=false
# Use mock Shopify responses (for testing)
# true: Use mocks, don't call actual API
# false: Use real API

